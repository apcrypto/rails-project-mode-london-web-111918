<center>
  <div style="position:fixed;
      top: 50%;
      left: 50%;
      background-color: #ffffff;
      background-repeat:repeat-x;
      border:1px solid #d1c7ac;
      width:50%;
      height:70%;
      color:#333333;
      padding:3px;
      margin-top: -20em;
      margin-left: -23em;
      font-family:tahoma, arial, sans-serif;
      border-radius:15px;
      overflow:auto;">
<h1>All Sitters</h1>

<% @sitters.each do |sitter| %>
<div><h3><%= sitter.full_name %></h3>
  <p><%= sitter.gender %></p>
<p><%= sitter.description %></p></div>
<% end %>

</div>
</center>
