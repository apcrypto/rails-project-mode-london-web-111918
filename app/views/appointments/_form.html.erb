<center><%= form_for @appointment do |f| %>

  <p><%= f.label 'pet_id' %></p>
  <%= f.collection_select :pet_id, Pet.all, :id, :name %><br>

  <p><%= f.label 'sitter_id' %></p>
  <%= f.collection_select :sitter_id, Sitter.all, :id, :full_name %><br>

  <p><%= f.label 'start_date' %></p>
  <p><%= f.date_select :start_date %></p>

  <p><%= f.label 'end_date' %></p>
  <p><%= f.date_select :end_date %></p>


  <p><%= f.submit %></p>

<% end %>

<%= form_tag owners_path, method: 'get' do %>
<%= submit_tag 'Home' %>
<% end %>
