
<div class="row-no-gutters">
<%= bootstrap_form_for(@appointment, layout: :horizontal, control_col: "bootstrap_col") do |f| %>

  <div class="form-container">
    <% @owner = Owner.find_by(id: session[:owner_id]) %>
    <% @pets = @owner.pets %>

    <%= f.collection_select :pet_id, @pets, :id, :name %>

    <%= f.collection_select :sitter_id, Sitter.all, :id, :full_name %>

    <p><%= link_to('Not sure which sitter to choose?', { action: 'index', controller: 'sitters' }, { target: '_blank' }) %></p>

    <%= f.date_select :start_date %>

    <%= f.date_select :end_date %>

    <div class="actions"><%= f.submit :class => "button" %></div>

  </div>

<% end %>
</div>
